{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "rootDirs": [                             /* List of root folders whose combined content represents the structure of the project at runtime. */
      "./src",
      "./test"
    ],
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    // "bun-types" is the important part
    "types": [
      "bun-types"
    ],
    "moduleResolution": "node",
  }
}